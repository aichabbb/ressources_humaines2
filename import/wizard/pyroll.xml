<?xml version="1.0"?>
<odoo>

    <record id="view_import_payroll_form" model="ir.ui.view">
        <field name="name">import.salary.rule.form</field>
        <field name="model">import.salary.rule</field>
        <field name="arch" type="xml">
            <form string="import salry role">
                <group>
                    <field name="file_name"/>
                </group>
                <footer>
                    <button name="import_journal_entry" type="object" string="import" class="btn-primary"/>
<!--                    <button name="action_view_appointment" type="object" string="View Appointments" class="btn-primary"/>-->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="import_payroll" model="ir.actions.act_window">
        <field name="name">payroll</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.salary.rule</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_payroll_form"/>
        <field name="target">new</field>
    </record>

</odoo>
