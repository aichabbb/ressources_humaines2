<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <record id="payroll_rubrique_submission_form" model="ir.ui.view">
      <field name="name">payroll.rubrique.submission.form</field>
      <field name="model">ma.payroll.rubrique.submission</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group >
              <group>
                <field name="name"/>
                <field name="company_id"/>
              </group>
            </group>
              
          </sheet>
        </form>
      </field>
    </record>

    <record id="payroll_rubrique_submission_tree" model="ir.ui.view">
      <field name="name">ma.payroll.rubrique.submission.tree</field>
      <field name="model">ma.payroll.rubrique.submission</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="name"/>
          <field name="company_id"/>
        </tree>
      </field>
    </record>
    
    <record id="payroll_rubrique_submission_action" model="ir.actions.act_window">
      <field name="name">Submission de Rubrique</field>
      <field name="res_model">ma.payroll.rubrique.submission</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem
      id="payroll_rubrique_submission_menu"
      name="Submission de Rubrique"
      action="payroll_rubrique_submission_action"
      parent='hr_payroll_community.menu_hr_payroll_community_configuration'
      sequence="3"/>
  
  </data>
  
</odoo>