<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>
    <record id="payroll_rubrique_form" model="ir.ui.view">
      <field name="name">payroll.rubrique.form</field>
      <field name="model">ma.payroll.rubrique</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group >
              <group>
                <field name="name"/>
                <field name="category"/>
                <field name="company_id"/>
              </group>
              <group>
                <field name="code"/>
                <field name="is_hourly"/>
              </group>
              
            </group>
            <group  string="Type">
              <group>
                <field name="type"/>
                <field name="traitement_type"/>
                <field name="is_imposable"/>
                <field name="plafond"/>
              </group>
              <group string="Soumise A">
                <field name="submission_ids" widget="many2many_tags"/>
              </group>
            </group>
            <group >
              <group>
                <field name="credit_account_id"/>
                <field name="sequence"/>
              </group>
              <group >
                <field name="debit_account_id"/>
                <field name="comment"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="payroll_rubrique_tree" model="ir.ui.view">
      <field name="name">ma.payroll.rubrique.tree</field>
      <field name="model">ma.payroll.rubrique</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="name"/>
          <field name="category"/>
          <field name="company_id"/>
        </tree>
      </field>
    </record>
    
    <record id="payroll_rubrique_action" model="ir.actions.act_window">
      <field name="name">Rubriques</field>
      <field name="res_model">ma.payroll.rubrique</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem
      id="payroll_rubrique_menu"
      name="Rubriques"
      action="payroll_rubrique_action"
      parent='hr_payroll_community.menu_hr_payroll_community_configuration'
      sequence="2"/>
  
  </data>
  
</odoo>