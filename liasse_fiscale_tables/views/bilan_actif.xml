<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_bilan_active_form" model="ir.ui.view">
	    <field name="name">view.bilan.active.form</field>
	    <field name="model">bilan.active</field>
	    <field name="arch" type="xml">
	        <form string="Bilan Actif">
				<header>
					<button name="get_lines" type="object" string="Mise à jour des données"/>
                </header>
				<group>
					<field name="name"/>
					<field name="fy_n_id" required="1"/>
					<field name="company_id" invisible="1"/>
					<notebook colspan="4">
						<page string="Lignes">
							<field name="line_ids" create="false" colspan="4">
								<tree editable="bottom" create="false">
									<field name="name"/>
									<field name="gross"/>
									<field name="amort"/>
									<field name="net"/>
									<field name="prev_net"/>
									<field name="code_edi_gross" invisible="1"/>
									<field name="code_edi_amort" invisible="1"/>
									<field name="code_edi_net" invisible="1"/>
									<field name="code_edi_prev_net" invisible="1"/>
									<field name="bilan_id" invisible="1"/>
									<field name="company_id" invisible="1"/>
								</tree>
							</field>
						</page>
					</notebook>
				</group>
	        </form>
	    </field>
	</record>

	<record id="view_bilan_active_tree" model="ir.ui.view">
	    <field name="name">view.bilan.active.tree</field>
	    <field name="model">bilan.active</field>
	    <field name="arch" type="xml">
	        <tree string="BILAN ACTIVE">
				<field name="name"/>
				<field name="fy_n_id"/>
				<field name="company_id" invisible="1"/>
			</tree>
		</field>
	</record>

	<record id="action_bilan_active" model="ir.actions.act_window">
	    <field name="name">BILAN ACTIVE</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">bilan.active</field>
	    <field name="view_mode">tree,form</field>
	</record>

	<!-- <menuitem name="Actif " id="menu_actif_id" parent="menu_tables_root" action="action_bilan_active"
	sequence="1" /> -->
	
	<!-- PDF report -->
	<record id="action_report_bilan_active" model="ir.actions.report">
        <field name="name">Bilan Active</field>
        <field name="model">bilan.active</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">liass_moroccain.repport_report_bilan_active</field>
        <field name="report_file">liass_moroccain.repport_report_bilan_active</field>
        <field name="print_report_name"></field>
        <field name="binding_model_id" ref="model_bilan_active"/>
        <field name="binding_type">report</field>
    </record>

    <template id="repport_report_bilan_active">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                <div class="page">
                <div class="oe_structure"/>
                <div>
                    <h3 style="text-align: center;">Tableau N°01 : Bilan Active</h3>                 
                    <h6 >Exercice de : <span style="text-align: left;" t-field="doc.fy_n_id.date_start"/> au : <span style="text-align: right;" t-field="doc.fy_n_id.date_end"/></h6>

                </div>
                <div class="wrap">
				<table class="table table-sm o_main_table">
					<!-- In case we want to repeat the header, remove "display: table-row-group" -->
					<thead style="display: table-row-group">
						<tr>
							<!-- <th></th> -->
							<th style="border: 1px solid;text-align: center;" name="th_name" >DESIGNATION</th>
							<th style="border: 1px solid;text-align: center;" name="debut_exercice" >Brut</th>
							<th style="border: 1px solid;text-align: center;" name="dotation_exercice" >Amortissements et Provisions</th>
							<th style="border: 1px solid;text-align: center;" name="amortissement_sortie">Net</th>
							<th style="border: 1px solid;text-align: center;" name="amortissement_entree">Net d'exercice précédent</th>
						</tr>
					</thead>
					<tbody class="sale_tbody">
						<t t-foreach="doc.line_ids" t-as="line">
							<tr>
								<td style="border: 1px solid;" name="td_name">
									<span t-field="line.name"/>
								</td>
								<td style="border: 1px solid;" name="debut_exercice">
									<span t-field="line.gross"/>
								</td>
								<td style="border: 1px solid;" name="dotation_exercice">
									<span t-field="line.amort"/>
								</td>
								<td style="border: 1px solid;" name="amortissement_sortie">
									<span t-field="line.net"/>
								</td>
								<td style="border: 1px solid;" name="amortissement_entree">
									<span t-field="line.prev_net"/>
								</td>
							</tr>
						</t>
					</tbody>
				</table>
            	</div>
            </div>
        </t>
        </t>
        </t>
    </template>
  </data>
</odoo>