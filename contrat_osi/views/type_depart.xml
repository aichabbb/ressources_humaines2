<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_resignation_type_tree" model="ir.ui.view">
            <field name="name">hr.resignation.type.tree</field>
            <field name="model">hr.resignation.type</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="resignation type">
                    <field name="Name"/>
                    <field name="Préavis"/>

                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="view_Type_départ">
            <field name="name">Type de départ</field>
            <field name="res_model">hr.resignation.type</field>
            <field name="view_mode">tree,form</field>

        </record>

        <menuitem id="Type_départ_id" parent="employee_resignation" name="Resignation Request"
                  action="view_Type_départ" sequence="5"/>
    </data>
</odoo>
